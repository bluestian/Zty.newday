<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
              android:orientation="vertical"
              android:layout_width="match_parent"
              android:layout_height="match_parent"
              android:background="#90697c7a"
     >
     <RelativeLayout
         android:layout_width="match_parent"
         android:layout_height="50dp"
         android:background="@color/colorWhite"
         >
       <TextView
           android:id="@+id/psg_tv_person"
           android:layout_width="wrap_content"
           android:layout_height="wrap_content"
           android:layout_marginLeft="5dp"
           android:layout_alignParentLeft="true"
           android:layout_centerVertical="true"
           android:textStyle="bold"
           android:textSize="27sp"
           android:text="个人"

           />
         <TextView
             android:id="@+id/psg_tv_setts"
             android:layout_width="wrap_content"
             android:layout_height="wrap_content"
             android:layout_marginRight="5dp"
             android:layout_alignParentRight="true"
             android:layout_centerVertical="true"
             android:text="设置"
            />

     </RelativeLayout>
         <RelativeLayout

             android:layout_marginTop="50dp"
             android:layout_width="match_parent"
             android:layout_height="wrap_content"
             >
             <ImageView
                 android:id="@+id/psg_iv"
                 android:layout_width="wrap_content"
                 android:layout_height="wrap_content"
                 android:src="@drawable/bg_logrig_personage"
                 android:layout_centerHorizontal="true"
                 />
             <TextView
                 android:id="@+id/psg_tv"
                 android:layout_width="wrap_content"
                 android:layout_height="wrap_content"
                 android:layout_marginTop="50dp"
                 android:layout_below="@+id/psg_iv"
                 android:layout_centerHorizontal="true"
                 android:textSize="27sp"
                 android:textStyle="bold"
                 android:text="登录NEWDAY"/>
             <TextView
                 android:layout_width="wrap_content"
                 android:layout_height="wrap_content"
                 android:layout_marginTop="20dp"
                 android:layout_below="@+id/psg_tv"
                 android:layout_centerHorizontal="true"
                 android:text="让你的每一天都是新的一天"/>
         </RelativeLayout>

          <RelativeLayout
              android:layout_width="match_parent"
              android:layout_height="wrap_content"
              android:layout_marginTop="50dp"

              >
             <Button
                 android:id="@+id/psg_bt_register"
                 android:layout_width="120dp"
                 android:layout_height="50dp"
                 android:layout_marginLeft="45dp"
                 android:layout_centerVertical="true"
                 android:background="#162fbf"
                 android:layout_alignParentLeft="true"
                 android:text="注册"
                 />
              <Button
                  android:id="@+id/psg_bt_logging"
                  android:layout_width="120dp"
                  android:layout_height="50dp"
                  android:layout_marginRight="45dp"
                  android:layout_centerVertical="true"
                  android:layout_alignParentRight="true"
                  android:background="@color/colorGreyishWhite"
                  android:text="登录"
                  />
          </RelativeLayout>

</LinearLayout>